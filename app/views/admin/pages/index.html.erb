<div class="holder">
  <h1>Listing Pages</h1>

  <%= link_to 'New page', new_admin_page_path, class: "pure-button" %>

  <br />
  <br />

  <table class="pure-table pure-table-striped pure-table-horizontal">
    <tr>
      <th>Title</th>
      <th>Path</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= page.path %></td>
        <td><%= link_to 'Show', admin_page_path(page.id) %></td>
        <td><%= link_to 'Edit', edit_admin_page_path(page.id) %></td>
        <td><%= link_to 'Destroy', admin_page_path(page.id),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>
</div>
