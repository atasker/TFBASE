<div class="nested-fields" >
  <p>
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </p>

  <p>
    <%= f.label :category %><br>
    <%= f.text_area :category %>
  </p>

  <p>
    <%= f.label :quantity %><br>
    <%= f.text_area :quantity %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.label :pairs_only, 'Only sell in pairs?' %>
    <%= f.check_box :pairs_only %>
  </p>

  <p>
    <%= f.label :currency %><br>
    <%= f.select :currency, ["Dollars", "Euros", "Pounds"], :prompt => "Choose Currency" %>
  </p>

  <p>
    <%= f.label :event_id %><br>
    <%= f.collection_select(:event_id, Event.order('id ASC'), :id, :id, prompt: true) %>
  </p>

  <%= link_to_remove_association "remove ticket", f %>
</div>
