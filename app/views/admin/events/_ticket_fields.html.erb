<tr class="nested-fields" >
  <td>
    <%= f.text_area :category %>
  </td>

  <td class="event-ticket-cell-enquire">
    <%= f.check_box :enquire %>
  </td>

  <td class="event-ticket-cell-price">
    <%= f.number_field :price, style: "max-width: 100px;" %>
  </td>

  <td class="event-ticket-cell-quantity">
    <%= f.number_field :quantity, style: "max-width: 80px;" %>
  </td>

  <td class="event-ticket-cell-pairs-only">
    <%= f.check_box :pairs_only %>
  </td>

  <td class="event-ticket-cell-currency">
    <% opts = Ticket::CURRENCIES.collect {|cur| [currency_name(cur), cur] } %>
    <%= f.select :currency, opts, :prompt => "-choose-" %>
  </td>

  <td>
    <%= f.text_area :text %>
  </td>

  <td>
  <%= link_to_remove_association "remove ticket", f %>
</td>
</tr>
