<%= form_for [:admin, @competition], url: (@competition.new_record? ? nil : admin_competition_path(@competition.id)) do |f| %>

  <% if @competition.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@competition.errors.count, "error") %> prohibited
        this competition from being saved:
      </h2>
      <ul>
        <% @competition.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :slug %><br>
    <%= competitions_path() %>/ <%= f.text_field :slug %><br>
    <small>* leave blank to autobuild slug based on name</small>
  </p>

  <p>
    <h3>Information blocks</h3>
    <ul id="info-blocks">
      <%= f.simple_fields_for :info_blocks do |info_block| %>
        <%= render '/admin/shared/info_block_fields', f: info_block %>
      <% end %>
    </ul>
    <div class="links">
      <%= link_to_add_association '+ Add new information block', f, :info_blocks, partial: '/admin/shared/info_block_fields', data: { "association-insertion-node" => "#info-blocks", "association-insertion-method" => "append"} %>
    </div>
  </p>

  <p>
    <%= f.label :category_id %><br>
    <%= f.collection_select(:category_id, Category.order('description ASC'), :id, :description, { prompt: true }, { :class => 'chzn-select' }) %>
  </p>

  <!-- if image already exists for this competition, show image -->
  <%= image_tag(@competition.avatar.grid_small.url) if @competition.avatar? %>

  <p>
    <%= f.label :avatar, "Image" %>
    <%= f.file_field :avatar %>
  </p>

  <%= render partial: 'admin/shared/seo_data_fields', locals: { f: f, name: 'competition' } %>

  <p>
    <%= f.submit %>
  </p>
<% end %>
