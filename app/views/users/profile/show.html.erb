<div class="page-title">
  <div class="container-fluid">
    <div class="page-title__inner">
      <%= render 'shared/breadcrumbs' %>
      <h1>Profile</h1>
      <p class="page-title__subtitle">Welcome <%= current_user.email %></p>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="card-panel-container">
    <div class="card-panel">
      <div class="card-panel-heading">Account Settings</div>
      <div class="card-panel-body">
        <%= link_to 'Edit', edit_user_registration_path, :class => 'buttn' %>
      </div>
    </div>

    <div class="card-panel">
      <div class="card-panel-heading">Email Preferences</div>
      <div class="card-panel-body">
        <%= link_to 'Edit', edit_user_registration_path, :class => 'buttn' %>
      </div>
    </div>
  </div>

  <hr class="nice-hr" />

  <h3 class="nice-h3">Orders</h3>

  <% if @orders.any? %>
    <div class="order-cards">
      <% @orders.each do |order| %>
        <%= render partial: 'orders/order_card', locals: { order: order } %>
      <% end %>
    </div>
    <% if @have_more_orders %>
      <p><%= link_to 'More orders ...', user_orders_path %></p>
    <% end %>
  <% else %>
    <p>You have no orders yet.</p>
  <% end %>
</div>
