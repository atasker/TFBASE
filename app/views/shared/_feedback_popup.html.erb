    <div id="popup-send" class="popup popup--send mfp-with-anim mfp-hide">
      <h2>Contact us</h2>
      <div class="popup-send__msg">All fields must be completed</div>
      <div class="popup-send__form">
        <form action="#" method="post">
          <div class="input-wrap">
            <label>Name</label>
            <div class="input-wrap__in">
              <input type="text">
            </div>
          </div>
          <div class="input-wrap input-wrap--error">
            <label>Email</label>
            <div class="input-wrap__in">
              <input type="email" placeholder="user@gmail.com">
            </div>
            <span class="error-msg">Error</span>
          </div>
          <div class="input-wrap">
            <label>Subject</label>
            <div class="input-wrap__in">
              <input type="text">
            </div>
          </div>
          <div class="input-wrap input-wrap--textarea">
            <label>Message</label>
            <div class="input-wrap__in">
              <textarea></textarea>
            </div>
          </div>
          <div class="input-wrap input-wrap--question">
            <label>Answer</label>
            <div class="input-wrap__in">
              <div class="popup-send__question">What is the last month of the year?</div>
              <input type="text">
            </div>
          </div>
          <div class="submit-wrap">
            <input type="submit" value="Send">
            <input type="reset" value="Cancel">
          </div>
        </form>
      </div>
    </div>
